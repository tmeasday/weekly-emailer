<style>
  table tbody th {
    text-align: left;
  }
</style>

<table>
  <thead>
    <tr>
      <th></th>
      <% users.each do |user| %>
        <th><%= user[:name] %></th>
      <% end %>
      <th>TOTAL</th>
      <th>TOTAL DAYS</th>
    </tr>
  </thead>
  
  <tbody>
    <% projects.each do |project| %>
      <tr>
        <th><%= project[:client_name] + ' - ' + project[:name] %></th>
        <% users.each do |user| %>
          <td>
            <% hours = project_user_hours[project[:id]][user[:id]] %>
            <%= '%.1f' % hours if hours > 0 %>
          </td>
        <% end %>
        <td><%= '%.1f' % project[:total] %></td>
        <td><%= '%.1f' % (project[:total] / 8) %></td>
      </tr>
    <% end %>
  </tbody>
</table>